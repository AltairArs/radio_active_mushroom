<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1729063353139-1" author="Сергей">
        <createTable tableName="membership_request_entity">
            <column name="sender_username" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_membership_request_entity"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
            <column name="sended_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="project_name" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_membership_request_entity"/>
            </column>
            <column name="project_owner_username" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_membership_request_entity"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1729063353139-2" author="Сергей">
        <createTable tableName="project_entity">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_project_entity"/>
            </column>
            <column name="owner_username" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_project_entity"/>
            </column>
            <column name="friendly_name" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="can_see" type="VARCHAR(12)">
                <constraints nullable="false"/>
            </column>
            <column name="can_edit" type="VARCHAR(12)">
                <constraints nullable="false"/>
            </column>
            <column name="can_download" type="VARCHAR(12)">
                <constraints nullable="false"/>
            </column>
            <column name="members_can_add_others" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1729063353139-3" author="Сергей">
        <createTable tableName="project_members">
            <column name="member_username" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_project_members"/>
            </column>
            <column name="projects_as_member_name" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_project_members"/>
            </column>
            <column name="projects_as_member_owner_username" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_project_members"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1729063353139-6" author="Сергей">
        <addForeignKeyConstraint baseColumnNames="project_name,project_owner_username"
                                 baseTableName="membership_request_entity"
                                 constraintName="FK_MEMBERSHIP_REQUEST_ENTITY_ON_PRNAPROWUS"
                                 referencedColumnNames="name,owner_username" referencedTableName="project_entity"/>
    </changeSet>
    <changeSet id="1729063353139-7" author="Сергей">
        <addForeignKeyConstraint baseColumnNames="sender_username" baseTableName="membership_request_entity"
                                 constraintName="FK_MEMBERSHIP_REQUEST_ENTITY_ON_SENDER_USERNAME"
                                 referencedColumnNames="username" referencedTableName="user_entity"/>
    </changeSet>
    <changeSet id="1729063353139-8" author="Сергей">
        <addForeignKeyConstraint baseColumnNames="owner_username" baseTableName="project_entity"
                                 constraintName="FK_PROJECT_ENTITY_ON_OWNER_USERNAME" referencedColumnNames="username"
                                 referencedTableName="user_entity"/>
    </changeSet>
    <changeSet id="1729063353139-9" author="Сергей">
        <addForeignKeyConstraint baseColumnNames="projects_as_member_name,projects_as_member_owner_username"
                                 baseTableName="project_members" constraintName="fk_promem_on_project_entity"
                                 referencedColumnNames="name,owner_username" referencedTableName="project_entity"/>
    </changeSet>
    <changeSet id="1729063353139-10" author="Сергей">
        <addForeignKeyConstraint baseColumnNames="member_username" baseTableName="project_members"
                                 constraintName="fk_promem_on_user_entity" referencedColumnNames="username"
                                 referencedTableName="user_entity"/>
    </changeSet>

</databaseChangeLog>